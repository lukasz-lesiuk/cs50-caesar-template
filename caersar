#include <cs50.h>
#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main(int argc, string argv[])
{
// Counting Command-Line Arguments and checking if all numbers
    if (argc != 2)
    {
        printf("Usage: ./caesar key\n"); 
    }
    else
    {
        string number =  argv[1]; //atoi   
        int len = strlen(number), i = 0;
        int num_check = 0;        //  0 - true, 1 - false
        while(i < len)
        {
            if ((isdigit(number[i]) == 0) && (number[i] != 0))
            {
                num_check = 1;
            }
            i++;
        }
        if( num_check == 0)
        {
            printf("Succes\n");
            printf("")
        }
        else
        {
            printf("Usage: ./caesar key\n");
        }
    }
//----------   
    
    
    
    
    
    return 0;
}
